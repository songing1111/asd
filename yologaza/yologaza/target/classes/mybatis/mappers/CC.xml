<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.CC">
<resultMap id="announceResult" type="announce_VO">
    <result property="articleNo" column="articleNo" />
    <result property="title" column="title" />
    <result property="id" column="id" />
    <result property="name" column="name" />
    <result property="content" column="content" />
    <result property="auth" column="auth" />
    <result property="writeDate" column="writeDate" />
  </resultMap> 

  <select id="selectAllAnnounceList" resultMap="announceResult">
    <![CDATA[
		
         select * from announce	order by writeDate asc 	
    ]]>
  </select>
  <select id="selectAnnounce" resultType="announce_VO"   parameterType="int">
    <![CDATA[
      SELECT * from announce
      where articleNo = #{articleNo}		
    ]]>
  </select>
</mapper>